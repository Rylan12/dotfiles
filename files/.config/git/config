# This file is indented using tabs, unlike most of my files.
# This is because git uses tabs it writes config options.

[alias]
	hide = update-index --skip-worktree
	show-hidden = ! git ls-files -v | grep '^S' | cut -c3-
	unhide = update-index --no-skip-worktree
	unhide-all = ! git ls-files -v | grep '^S' | cut -c3- | xargs git unhide --
[commit]
	gpgSign = true
	verbose = true
[core]
	autocrlf = input
	safecrlf = true
	editor = nvim
	pager = bat --style=plain
[credential]
	helper = /usr/local/share/gcm-core/git-credential-manager
[diff]
	tool = nvimdiff
	guitool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[gpg]
	program = /opt/homebrew/bin/gpg
[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[init]
	defaultBranch = main
[merge]
	tool = nvimdiff
	guitool = vscode
[mergetool "vscode"]
	cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
[pull]
	rebase = true
[rerere]
	enabled = true
[tag]
	gpgSign = true
[user]
	name = Rylan Polster
	email = rslpolster@gmail.com
	signingKey = 46A744940CFF4D64
[includeIf "gitdir:~/School/"]
	path = school.inc
